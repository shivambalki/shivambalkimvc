@model shivambalkimvc.Context.tab_student

@{
    ViewBag.Title = "Student";
}
<style>
    .error{color:red }
</style>
@using(Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{ 

<div class="container">
    <div class="form-group">
        @Html.HiddenFor(x=>x.Id)
        <label>Name</label>
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>Date of Birth</label>
        @Html.ValidationMessageFor(x => x.Dob, "", new { @class = "error" })
        @Html.EditorFor(x => x.Dob, new { @class = "form-control datetimepicker1" })
       
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>City</label>
        @Html.ValidationMessageFor(x => x.City, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-danger">Reset</button>
    </div>
</div>


}